<% if(profile.get("is_current_user")){ %>
  <h3 class="profile-show-header">Your Profile</h3>
<% } else { %>
  <h3><%= profile.user().escape("username") %>'s Profile</h3>
  <form class="like <% if(profile.escape("current_user_liked") === "true"){ %>
    clicked
    <% } %>">
    <input type="hidden" name="like[likee_id]" value="<%= profile.get("user_id") %>">
    <button class="like" name="button"><i class="fa fa-star-o"></i> Like</button>
  </form>
  <form class="unlike <% if(profile.escape("current_user_liked") === "false"){ %>
    clicked
    <% } %>">
    <input type="hidden" name="like[likee_id]" value="<%= profile.get("user_id") %>">
    <button class="unlike" name="button"><i class="fa fa-star liked"></i> Liked!</button>
  </form>
<% } %>

  <img src="<%= profile.user().escape("image_url") %>" alt="Avatar" />
    <label>Change Profile
      <form id="change-avatar">
        <input class="change-avatar" type="file" name="user[avatar]" value="">
        <button name="button" class="change-avatar" value="Submit"></button>
      </form>
    </label>

  <a class="messaging" href="/#message/new"><i class="fa fa-comment"></i> Send a Message</a>

  <form class="profile-edit">
    <h4>My self-summary</h4>
    <textarea <% if(!profile.get("is_current_user")){ %>
      readonly
      <% } %> class="profile-edit" rows="8" cols="40" name="profile[self_sum]" value="<%= profile.escape("self_sum") %>"><%= profile.escape("self_sum") %></textarea>

    <h4>What I'm doing with my life</h4>
    <textarea <% if(!profile.get("is_current_user")){ %>
      readonly
      <% } %> class="profile-edit" rows="8" cols="40" name="profile[life_sum]" value="<%= profile.escape("life_sum") %>"><%= profile.escape("life_sum") %></textarea>

    <h4>I'm really good at</h4>
    <textarea <% if(!profile.get("is_current_user")){ %>
      readonly
      <% } %> class="profile-edit" rows="8" cols="40" name="profile[skills]" value="<%= profile.escape("skills") %>"><%= profile.escape("skills") %></textarea>

    <h4>Favorite books, movies, shows, music, and food</h4>
    <textarea <% if(!profile.get("is_current_user")){ %>
      readonly
      <% } %> class="profile-edit" rows="8" cols="40" name="profile[favorites]" value="<%= profile.escape("favorites") %>"><%= profile.escape("favorites") %></textarea>

    <h4>The six things I could never do without</h4>
    <textarea <% if(!profile.get("is_current_user")){ %>
      readonly
      <% } %> class="profile-edit" rows="8" cols="40" name="profile[needs]" value="<%= profile.escape("needs") %>"><%= profile.escape("needs") %></textarea>

    <h4>I spend a lot of time thinking about</h4>
    <textarea <% if(!profile.get("is_current_user")){ %>
      readonly
      <% } %> class="profile-edit" rows="8" cols="40" name="profile[thoughts]" value="<%= profile.escape("thoughts") %>"><%= profile.escape("thoughts") %></textarea>

    <h4>On a typical Friday night I am</h4>
    <textarea <% if(!profile.get("is_current_user")){ %>
      readonly
      <% } %> class="profile-edit" rows="8" cols="40" name="profile[fun_acts]" value="<%= profile.escape("fun_acts") %>"><%= profile.escape("fun_acts") %></textarea>

    <h4>You should message me if</h4>
    <textarea <% if(!profile.get("is_current_user")){ %>
      readonly
      <% } %> class="profile-edit" rows="8" cols="40" name="profile[msg_reason]" value="<%= profile.escape("msg_reason") %>"><%= profile.escape("msg_reason") %></textarea>
  </form>
