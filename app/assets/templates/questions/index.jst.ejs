<h1>Questions</h1>

<ul class="questions">
  <% questions.each(function(question){ %>
    <li><%= question.escape("prompt") %></li>
    <form id="<%= question.escape("id") %>">
      <% answers.each(function(answer){ %>
        <% if(answer.escape("question_id") === question.escape("id")){ %>
          <input type="radio" name="answer_id" id="<%= answer.escape("id") %>" value="<%= answer.escape("content") %>">
          <label for="<%= answer.escape("id") %>"><%= answer.escape("content") %></label>
        <% } %>
      <% }) %>
    </form>
  <% }) %>
</ul>
