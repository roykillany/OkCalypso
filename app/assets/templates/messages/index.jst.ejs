<h1>All Messages</h1>

<ul class="messages">
  <h4>Sent Messages</h4>
  <% messages.each(function(msg){ %>
    <% if(msg.get("sender_id") === currentUser.id){ %>
      <li>Title: <%= msg.escape("title") %>Body: <%= msg.escape("body") %></li>
    <% } %>
  <% }) %>

  <h4>Received Messages</h4>
  <% messages.each(function(msg){ %>
    <% if(msg.get("receiver_id") === currentUser.id){ %>
      <li>Title: <%= msg.escape("title") %>Body: <%= msg.escape("body") %></li>
    <% } %>
  <% }) %>
</ul>
