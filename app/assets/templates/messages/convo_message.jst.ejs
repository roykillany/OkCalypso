<ul class="correspondence hvr-reveal">
  <img src="<%= message.sender().escape('image_url') %>" alt="" />
  <li class="msg"><strong>From</strong>: <a href="#profiles/<%= message.sender().get('id') %>"><%= message.sender().escape("username") %></a></li>
  <li class="msg"><strong>Sent</strong>: <%= new Date(message.escape("created_at")) %></li>
  <li class="msg"><strong>Body</strong>: <%= message.escape("body") %></li>
</ul>
