<!DOCTYPE html>
<html>
<head>
  <title>OkStupid</title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h1 class="title"><a class="title" href="<%= root_url %>">OkStupid</a></h1>

  <% if current_user %>
    <h2>Signed in as: <%= current_user.username %></h2>
    <%= button_to "Sign Out", session_url, method: :delete %>
  <% else %>
    <a href="<%= new_session_url %>">Sign In</a>
    <a href="<%= new_user_url %>">Sign Up</a>
  <% end %>

  <%= flash.now[:errors] %>

  <%= yield %>
</body>
</html>
